{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "module": "es6",
        "target": "es6",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "noImplicitAny": true,
        "allowUmdGlobalAccess": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
      },
    
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src"
    ]
}